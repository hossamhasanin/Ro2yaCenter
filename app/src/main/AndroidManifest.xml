<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hasanin.hossam.ro2yacenter">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />

    <application
        android:name=".Ro2yaCenterApp"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LogInActivity" />
        <activity android:name=".AdminMenu.AdminMenuActivity" />
        <activity android:name=".AdminMenu.Subjects.AddSubject" android:parentActivityName=".AdminMenu.Subjects.ShowSubjects" />
        <activity android:name=".LauncherActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AdminMenu.Subjects.ShowSubjects" android:parentActivityName=".AdminMenu.AdminMenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".AdminMenu.Students.ShowSubjects" />
        </activity>
        <activity
            android:name=".AdminMenu.Students.AddStudent"
            android:theme="@style/AppTheme"
            android:parentActivityName=".AdminMenu.Students.ShowStudents"/>
        <activity android:name=".AdminMenu.Students.ShowStudents" android:parentActivityName=".AdminMenu.AdminMenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".AdminMenu.Students.ShowStudents" />
        </activity>
        <activity android:name=".AdminMenu.Attendance.Store.StoreAttendance" android:parentActivityName=".AdminMenu.AdminMenuActivity" />
        <activity android:name=".AdminMenu.Attendance.Store.ShowAvailableUsers" />
        <activity android:name=".AdminMenu.Attendance.Show.ShowAttendanteSubjects" android:parentActivityName=".AdminMenu.AdminMenuActivity" />
        <activity android:name=".AdminMenu.Attendance.Show.ShowAttendantUsers" android:parentActivityName=".AdminMenu.Attendance.Show.ShowAttendanteSubjects" />
        <activity android:name=".AdminMenu.Attendance.Show.ShowAttendanceDates" />
        <activity android:name=".AdminMenu.Monthly.Store.StoreMonthly" android:parentActivityName=".AdminMenu.AdminMenuActivity" />
        <activity android:name=".AdminMenu.Monthly.Show.ShowMonths" />
        <activity android:name=".AdminMenu.Monthly.Store.StoreUsersMonthly" />
        <activity android:name=".AdminMenu.Monthly.Show.ShowMonthlySubjects" android:parentActivityName=".AdminMenu.AdminMenuActivity" />
        <activity android:name=".AdminMenu.Monthly.Show.PaidUsers" android:parentActivityName=".AdminMenu.Monthly.Show.ShowMonthlySubjects"></activity>
    </application>

</manifest>